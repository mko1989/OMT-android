<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- Full-screen camera preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Broadcast safe guides (preview only, NOT in stream) -->
    <com.omt.camera.SafeGuideView
        android:id="@+id/safeGuideView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Status badge — offset from top to avoid notification bar -->
    <TextView
        android:id="@+id/statusBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="12dp"
        android:background="#99000000"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="@string/not_streaming"
        android:textColor="@color/text_primary"
        android:textSize="11sp" />

    <!-- LIVE indicator -->
    <TextView
        android:id="@+id/liveBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="#CCFF0000"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="@string/live"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Status overlay (auto-hiding) — above controls -->
    <LinearLayout
        android:id="@+id/overlayPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="56dp"
        android:background="@color/surface_overlay"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/not_streaming"
            android:textColor="@color/text_secondary"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/deviceIpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/videoHintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:textSize="9sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Camera controls — horizontal bar along long edge (bottom in landscape) -->
    <LinearLayout
        android:id="@+id/controlsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/surface_overlay"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <Spinner
            android:id="@+id/resolutionSpinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:minWidth="60dp" />

        <Spinner
            android:id="@+id/fpsSpinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:minWidth="60dp" />

        <ImageButton
            android:id="@+id/cameraSwitchButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_desc_switch_camera"
            android:src="@drawable/ic_camera_switch"
            android:scaleType="centerInside"
            android:padding="6dp" />

        <ImageButton
            android:id="@+id/micButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/mic_toggle"
            android:src="@drawable/ic_mic"
            android:scaleType="centerInside"
            android:padding="6dp" />

        <ImageButton
            android:id="@+id/guidesButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_desc_toggle_guides"
            android:src="@drawable/ic_grid"
            android:scaleType="centerInside"
            android:padding="6dp" />

        <ImageButton
            android:id="@+id/badgeToggleButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_desc_toggle_overlay"
            android:src="@drawable/ic_info_off"
            android:scaleType="centerInside"
            android:padding="6dp"
            app:tint="@color/text_secondary" />

        <ImageButton
            android:id="@+id/refreshButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/restart_stream"
            android:src="@drawable/ic_refresh"
            android:scaleType="centerInside"
            android:padding="6dp"
            app:tint="@color/text_secondary" />
    </LinearLayout>
</FrameLayout>
